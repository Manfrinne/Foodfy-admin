

      <div class="editRecipeContent">
        <div class="input-block">
          <label for="name">Imagem da receita</label>
          <div>
            <input type="url" name="image_url" placeholder="http://..."
            value="{{ recipe.image_url }}">
          </div>
        </div>
        
        <div class="input-block">
          <label for="ingredients">Ingredientes</label>
          <div id="ingredients">
            {%for ingredient in recipe.ingredients%}
              <div class="ingredient">
                  <input type="text" name="ingredients[]" placeholder="Digite o ingrediente..." value="{{ ingredient }}">
              </div>
            {%endfor%}
          </div>
          <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
        </div>

        <div class="input-block">
          <label for="preparation_step">Modo de preparo</label>
          <div id="preparations-steps">
            {%for preparation_step in recipe.preparation_step%}
              <div class="preparations-step">
                 <input type="text" name="preparation_step[]" placeholder="Digite o passo para preparo..." value="{{ preparation_step }}">
              </div>
            {%endfor%}
          </div>
          <button type="button" class="add-steps">Adicionar novo passo</button>
        </div>

        <div class="input-block">
          <label for="additional_information">Informações adicionais</label>
          <div>
            <div>
              <textarea name="additional_information">{{recipe.additional_information}}</textarea>
            </div>
          </div>
        </div>
      </div>

